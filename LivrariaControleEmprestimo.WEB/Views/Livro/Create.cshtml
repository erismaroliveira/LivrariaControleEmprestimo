@model LivrariaControleEmprestimo.DATA.Models.Livro

@{
    ViewData["Title"] = "Create";
}

<h1>Novo livro</h1>

<h4>Preencha os campos abaixo para incluir um novo livro</h4>
<hr />
<div>
    <a class="btn btn-primary" asp-action="Index"><i class="fas fa-arrow-circle-left"></i> Voltar</a>
</div>
<br />
<div class="row">
    <div class="col-md">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="card">
                <div class="card-header">Informações Livro</div>
                <div class="card-body row">
                    <div class="col-md">
                        <div class="form-group col-md">
                            <label asp-for="LivroNome" class="control-label"></label>
                            <input asp-for="LivroNome" class="form-control" />
                            <span asp-validation-for="LivroNome" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md">
                            <label asp-for="LivroEditora" class="control-label"></label>
                            <input asp-for="LivroEditora" class="form-control" />
                            <span asp-validation-for="LivroEditora" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md">
                            <label asp-for="LivroEdicao" class="control-label"></label>
                            <input asp-for="LivroEdicao" class="form-control" />
                            <span asp-validation-for="LivroEdicao" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md">
                        <div class="form-group col-md">
                            <label asp-for="LivroAutor" class="control-label"></label>
                            <input asp-for="LivroAutor" class="form-control" />
                            <span asp-validation-for="LivroAutor" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md">
                            <label asp-for="LivroAnoPublicacao" class="control-label"></label>
                            <select asp-for="LivroAnoPublicacao" class="form-control">
                                @{
                                    var data = 1500;
                                    for (var i = 2021; i > data; i--)
                                    {
                                        var ano = i;
                                        <option onchange="passAno">@ano</option>
                                    }
                                }
                            </select>
                            <span asp-validation-for="LivroAnoPublicacao" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Incluir" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
<script>
    function passAno(ano) {
         document.getElementById('LivroAnoPublicacao').value = ano;
     }
</script>
}
